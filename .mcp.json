{
  "mcpServers": {
    "obsidian": {
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "${FLOX_ENV_PROJECT}/docker-compose.yml",
        "run",
        "--rm",
        "mcp-obsidian"
      ],
      "env": {
        "OBSIDIAN_HOST": "127.0.0.1",
        "OBSIDIAN_PORT": "27124",
        "OBSIDIAN_API_KEY": "${OBSIDIAN_API_KEY}",
        "OBSIDIAN_VERIFY_SSL": "false",
        "PYTHONHTTPSVERIFY": "0",
        "REQUESTS_CA_BUNDLE": "",
        "CURL_CA_BUNDLE": ""
      }
    }
  }
}